<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="opencamp.findthepair"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="8" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="opencamp.findthepair.Main" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="opencamp.findthepair.Game" android:label="@string/app_name" />
        <activity android:name="opencamp.findthepair.Rank" android:label="@string/app_name" />
    </application>

</manifest>
